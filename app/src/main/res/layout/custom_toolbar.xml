<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#1E5C8C"
    android:elevation="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    android:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <!-- Left Image -->
    <ImageView
        android:id="@+id/toolbar_left_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="start"
        android:layout_marginStart="16dp"
        android:src="@drawable/icone" />

    <!-- Centered Text -->
    <TextView
        android:id="@+id/toolbar_center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="IP Tools"
        android:layout_marginLeft="24dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- First Image on the right -->
        <ImageView
            android:id="@+id/toolbar_right_image_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/a" />

        <!-- Second Image on the right -->
        <ImageView
            android:id="@+id/toolbar_right_image_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/tres"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</androidx.appcompat.widget.Toolbar>
